doctype html
html(lang="ja" ng-app="phonecatApp")
  head
    meta(charset="UTF-8")
    title Google Phone Gallery
    script require('electron-connect').client.create()
    script(src='./js/lib/angular.min.js', charset='UTF-8')
    script(src='./js/controller.js', charset='UTF-8')
    link(rel='stylesheet', href='./css/lib/bootstrap.min.css')
    link(rel='stylesheet', href='./css/app.css')
  body(ng-controller="PhoneListCtrl")
    .container-fluid
      .row
        .col-xs-2
          |Search: 
          input(ng-model="query")
          |Sort by:
          select(ng-model="orderProps")
            option(value="name") Alphabetical
            option(value="age") Newest
            option(value="-age") Oldest
        .col-xs-10
          ul.phones
            li(ng-repeat="phone in phones | filter:query | orderBy:orderProps")
              span {{phone.name}}
              p {{phone.snippet}}
